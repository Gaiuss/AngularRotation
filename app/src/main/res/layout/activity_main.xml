<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.gaius.angular.AngularRotationTouchView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/stv_xueyou"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:controlDrawable="@drawable/img_twice_edit_restart"
        app:controlLocation="right_top"
        app:deleteLocation="left_top"
        app:scale="1.2"
        app:src="@drawable/self_checking_status_image_air" />

    <com.gaius.angular.AngularRotationTouchView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/stv_xueyou2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:controlDrawable="@drawable/ic_move"
        app:controlLocation="right_top"
        app:deleteDrawable="@drawable/ic_delete"
        app:deleteLocation="left_top"
        app:frameColor="#42A2FF"
        app:scale="1.2"
        app:src="@drawable/ic_xueyou" />

    <com.gaius.angular.AngularRotationTouchView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/stv_xueyou3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:controlDrawable="@drawable/ic_move"
        app:controlLocation="right_top"
        app:deleteDrawable="@drawable/ic_delete"
        app:deleteLocation="left_top"
        app:frameColor="#42A2FF"
        app:scale="1.2"
        app:src="@drawable/ic_xueyou" />

    <com.gaius.angular.AngularRotationTouchView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:controlDrawable="@drawable/ic_move"
        app:controlLocation="right_top"
        app:deleteDrawable="@drawable/ic_delete"
        app:deleteLocation="left_top"
        app:frameColor="#42A2FF"
        app:scale="1.2"
        app:src="@drawable/ic_xueyou" />

</androidx.constraintlayout.widget.ConstraintLayout>
